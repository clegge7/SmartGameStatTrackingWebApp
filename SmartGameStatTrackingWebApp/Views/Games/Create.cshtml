@model SmartGameStatTrackingWebApp.Models.Game

@{
    ViewBag.Title = "Create Game";
}

<script type="text/javascript" src="~/Content/js/plugins/jquery/jquery-3.3.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#date').datepicker({
            todayHighlight: true
        });
    });
</script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.gameDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.gameDate, new { htmlAttributes = new { @class = "form-control input-group date", @id = "date", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.gameDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.homeTeam, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.homeTeamID, ViewBag.Teams as IEnumerable<SelectListItem>, "--Select Home Team--", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.homeTeamID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.awayTeam, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.awayTeamID, ViewBag.Teams as IEnumerable<SelectListItem>, "--Select Away Team--", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.awayTeamID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StartGame, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.StartGame, new { htmlAttributes = new { @type = "time", @min = "0:00", @max = "23:59", @class = "form-control input-group date", @id = "tipoff" } })
            @Html.ValidationMessageFor(model => model.StartGame, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DeviceID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DeviceID, new { htmlAttributes = new { @class = "form-control", @min = "0"} })
            @Html.ValidationMessageFor(model => model.DeviceID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>