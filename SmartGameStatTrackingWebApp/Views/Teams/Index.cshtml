@model IEnumerable<SmartGameStatTrackingWebApp.Models.Team>

@{
    ViewBag.Title = "Teams";
}

<link rel="stylesheet" type="text/css" href="~/Content/css/table.css" />

@if (User.Identity.Name == "colin" || User.Identity.Name == "stephan")
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<form asp-controller="Teams" asp-action="Index">
    <p>
        <input type="text" name="search">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <tr class="head">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.wins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.losses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.season)
        </th>
        @if (User.Identity.Name == "colin" || User.Identity.Name == "stephan")
        {
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.wins)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.losses)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.season)
        </td>
        @if (User.Identity.Name == "colin" || User.Identity.Name == "stephan")
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        }
    </tr>
    }

</table>
